<ui:FluentWindow x:Class="CAT2.MainWindow" Topmost="True" 
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:local="clr-namespace:CAT2"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Round"
                 WindowStartupLocation="CenterScreen"
                 ExtendsContentIntoTitleBar="True"
                 Title="ChmlFrp - Advanced Toolkit 2" 
                 Height="550" Width="1050"
                 MinHeight="450" MinWidth="800"
                 MaxHeight="650" MaxWidth="1250">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar Title="ChmlFrp - Advanced Toolkit 2"
                     CanMaximize="False" ShowMaximize="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/logo.ico" />
            </ui:TitleBar.Icon>
            <ui:TitleBar.TrailingContent>
                <ToggleButton Height="30" Width="45"
                              VerticalAlignment="Top"
                              Checked="ThemesChanged"
                              Unchecked="ThemesChanged">
                    <ui:SymbolIcon Symbol="DarkTheme24" />
                </ToggleButton>
            </ui:TitleBar.TrailingContent>
        </ui:TitleBar>

        <Grid x:Name="MainGrid"
              Grid.Row="1">
            <ui:NavigationView x:Name="RootNavigation"
                               PaneDisplayMode="Left"
                               IsBackButtonVisible="Collapsed">
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem Content="登录" Icon="{ui:SymbolIcon SignOut24}"
                                           x:Name="LoginItem"
                                           Visibility="Collapsed"
                                           NavigationCacheMode="Enabled"
                                           TargetPageType="{x:Type local:LoginPage}" />

                    <ui:NavigationViewItem Content="用户页" Icon="{ui:SymbolIcon ContactCard24}"
                                           x:Name="UserItem"
                                           Visibility="Collapsed"
                                           NavigationCacheMode="Enabled"
                                           TargetPageType="{x:Type local:UserinfoPage}" />
                </ui:NavigationView.MenuItems>

                <ui:NavigationView.FooterMenuItems>
                    <ui:NavigationViewItem Content="设置" Icon="{ui:SymbolIcon Settings32}"
                                           NavigationCacheMode="Enabled"
                                           TargetPageType="{x:Type local:SettingPage}" />
                </ui:NavigationView.FooterMenuItems>
            </ui:NavigationView>
        </Grid>
    </Grid>
</ui:FluentWindow>