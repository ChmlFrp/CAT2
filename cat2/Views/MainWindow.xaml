<ui:FluentWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:pages="clr-namespace:CAT2.Views.Pages"
    xmlns:vm="clr-namespace:CAT2.ViewModels"

    Title="{Binding AssemblyName}"
    ExtendsContentIntoTitleBar="True"
    x:Class="CAT2.Views.MainWindow"
    MinHeight="450" MinWidth="600"
    Height="525" Width="950"
    WindowBackdropType="Mica"
    Topmost="True">

    <ui:FluentWindow.DataContext>
        <vm:MainWindowViewModel />
    </ui:FluentWindow.DataContext>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>

            <ui:TitleBar
                Title="{Binding AssemblyName}">
                <ui:TitleBar.Icon>
                    <ui:ImageIcon
                        Source="pack://application:,,,/logo.ico" />
                </ui:TitleBar.Icon>

                <ui:TitleBar.TrailingContent>
                    <ToggleButton
                        Height="30" Width="45"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        BorderThickness="0"
                        IsChecked="{Binding IsDarkTheme,Mode=TwoWay}"
                        Command="{Binding ChangeThemeCommand}">
                        <ui:SymbolIcon Symbol="DarkTheme24" />
                    </ToggleButton>
                </ui:TitleBar.TrailingContent>
            </ui:TitleBar>

            <ui:NavigationView
                IsBackButtonVisible="Collapsed"
                Name="RootNavigation"
                Grid.Row="1">
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem
                        Content="登录"
                        FontSize="16"
                        Name="LoginItem"
                        Icon="{ui:SymbolIcon NoteAdd48}"
                        TargetPageType="{x:Type pages:LoginPage}" />

                    <ui:NavigationViewItem
                        Content="管理隧道"
                        Name="TunnelItem"
                        Visibility="Collapsed"
                        NavigationCacheMode="Required"
                        Icon="{ui:SymbolIcon AlignLeft48}"
                        TargetPageType="{x:Type pages:TunnelPage}" />

                    <ui:NavigationViewItem
                        Content="查看节点"
                        Name="NodeItem"
                        Visibility="Collapsed"
                        NavigationCacheMode="Required"
                        Icon="{ui:SymbolIcon AppsListDetail24}"
                        TargetPageType="{x:Type pages:NodePage}" />

                    <ui:NavigationViewItem
                        Content="用户信息"
                        Name="UserItem"
                        Visibility="Collapsed"
                        NavigationCacheMode="Required"
                        Icon="{ui:SymbolIcon BookContacts32}"
                        TargetPageType="{x:Type pages:UserPage}" />
                </ui:NavigationView.MenuItems>

                <ui:NavigationView.FooterMenuItems>
                    <ui:NavigationViewItem
                        Content="设置"
                        NavigationCacheMode="Required"
                        Icon="{ui:SymbolIcon Settings48}"
                        TargetPageType="{x:Type pages:SettingPage}" />
                </ui:NavigationView.FooterMenuItems>
            </ui:NavigationView>
        </Grid>

        <ui:SnackbarPresenter
            Name="RootSnackbarDialog" />
        <ContentPresenter
            Name="RootContentDialogPresenter" />
    </Grid>
</ui:FluentWindow>