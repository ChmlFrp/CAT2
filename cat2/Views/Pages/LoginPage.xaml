<Page x:Class="CAT2.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:CAT2">

    <Page.DataContext>
        <local:LoginPageViewModel />
    </Page.DataContext>

    <ui:Card Margin="65,75,65,75"
             Padding="15">
        <StackPanel Orientation="Vertical"
                    MinWidth="150">
            <TextBlock HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontSize="25"
                       Text="登录ChmlFrp" />

            <ui:TextBox Margin="0,15,0,0"
                        Text="{Binding Username,Mode=TwoWay}"
                        FontSize="16"
                        PlaceholderText="用户名" 
                        Icon="{ui:SymbolIcon Rename16}"/>

            <ui:PasswordBox Margin="0,15,0,0"
                            Password="{Binding Password,Mode=TwoWay}"
                            FontSize="16"
                            PlaceholderText="密码"
                            Icon="{ui:SymbolIcon Password16}" />

            <Grid Margin="0,20,0,0">
                <ui:Button ToolTipService.ToolTip="快点a！"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Padding="12,8,12,8"
                           Appearance="Primary"
                           Command="{Binding RegisterClickCommand}">
                    <ui:Button.Content>
                        <TextBlock Text="注册" FontSize="16" />
                    </ui:Button.Content>
                </ui:Button>

                <ui:Button ToolTipService.ToolTip="快点a！"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Padding="12,8,12,8"
                           Appearance="Primary"
                           Command="{Binding LoginClickCommand}">
                    <ui:Button.Content>
                        <TextBlock Text="登录" FontSize="16" />
                    </ui:Button.Content>
                </ui:Button>
            </Grid>
        </StackPanel>
    </ui:Card>
</Page>