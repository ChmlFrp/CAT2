<Page x:Class="CAT2.Views.Pages.TunnelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:pages="clr-namespace:CAT2.Views.Pages">

    <Page.Resources>
        <Style TargetType="pages:TunnelViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type pages:TunnelViewItem}">
                        <ui:Card Margin="0,0,0,5">
                            <Grid>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left"
                                            Orientation="Horizontal">
                                    <ui:TextBlock FontSize="18"
                                                  FontWeight="Bold"
                                                  Text="{TemplateBinding Content}" />

                                    <ui:TextBlock FontSize="14"
                                                  Foreground="Gray"
                                                  Text="{TemplateBinding Id}" />

                                    <ui:TextBlock FontSize="16"
                                                  Margin="10,0,0,0"
                                                  Text="{TemplateBinding Info}" />

                                </StackPanel>

                                <ui:ToggleSwitch HorizontalAlignment="Right"
                                                 VerticalAlignment="Top"
                                                 Margin="0,0,15,0"
                                                 Tag="{TemplateBinding Content}"
                                                 IsChecked="{TemplateBinding IsTunnelStarted}"
                                                 Checked="StartTunnel"
                                                 Unchecked="StopTunnel"
                                                 OffContent="启动"
                                                 OnContent="关闭" />
                            </Grid>
                        </ui:Card>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <ui:ProgressRing x:Name="LoadingRing" IsIndeterminate="True" />

        <ui:Card x:Name="TunnelCard" Margin="35,35,35,15">
            <Grid>
                <ScrollViewer MaxHeight="450"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ui:ListView x:Name="ListView" />
                </ScrollViewer>
            </Grid>
        </ui:Card>
    </Grid>
</Page>