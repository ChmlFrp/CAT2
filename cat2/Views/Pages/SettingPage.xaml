<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:CAT2.ViewModels"

    x:Class="CAT2.Views.Pages.SettingPage">

    <Page.DataContext>
        <vm:SettingPageViewModel />
    </Page.DataContext>

    <StackPanel
        Margin="15"
        Orientation="Vertical">

        <Label
            Margin="0,5,0,5"
            FontWeight="Bold"
            Content="设置" />

        <ui:CardExpander
            Margin="0,0,0,5">
            <ui:CardExpander.Header>
                <Grid>
                    <StackPanel
                        Orientation="Horizontal">
                        <ui:SymbolIcon
                            FontSize="25"
                            Margin="10,0,10,0"
                            Symbol="DualScreenUpdate24" />
                        <TextBlock>
                            <Run
                                Text="软件更新设置" />
                            <LineBreak />
                            <Run
                                FontSize="14"
                                Text="启用或禁用自动更新和检测更新。"
                                Foreground="{ui:ThemeResource TextFillColorDisabledBrush}" />
                        </TextBlock>
                    </StackPanel>

                    <ui:ToggleSwitch
                        Command="{Binding AutoUpdateCommand}"
                        IsChecked="{Binding IsAutoUpdateEnabled}"
                        OnContent="启用"
                        OffContent="禁用"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right" />
                </Grid>
            </ui:CardExpander.Header>

            <Button
                Content="检测软件更新"
                Command="{Binding UpdateCommand}" />
        </ui:CardExpander>

        <ui:CardExpander>
            <ui:CardExpander.Header>
                <Grid>
                    <StackPanel
                        Orientation="Horizontal">
                        <ui:SymbolIcon
                            FontSize="25"
                            Margin="10,0,10,0"
                            Symbol="DocumentTextClock24" />
                        <TextBlock>
                            <Run
                                Text="隧道日志记录" />
                            <LineBreak />
                            <Run
                                FontSize="14"
                                Text="查看日志记录或清除它。"
                                Foreground="{ui:ThemeResource TextFillColorDisabledBrush}" />
                        </TextBlock>
                    </StackPanel>

                    <Button
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        Command="{Binding OpenDataPathCommand}"
                        Content="打开文件夹" />
                </Grid>
            </ui:CardExpander.Header>

            <Button
                Content="清除隧道日志缓存"
                Command="{Binding ClearCacheCommand}" />
        </ui:CardExpander>

        <Label
            Margin="0,20,0,5"
            FontWeight="Bold"
            Content="关于" />

        <ui:CardExpander>
            <ui:CardExpander.Header>
                <Grid>
                    <StackPanel
                        Orientation="Horizontal"
                        VerticalAlignment="Center">

                        <ui:ImageIcon
                            Height="30"
                            Margin="10,0,10,0"
                            Source="pack://application:,,,/logo.ico" />

                        <ui:TextBlock>
                            <Run
                                Text="{Binding AssemblyName}" />
                            <LineBreak />
                            <Run
                                Foreground="{ui:ThemeResource TextFillColorDisabledBrush}"
                                Text="{Binding Copyright}"
                                FontSize="14" />
                        </ui:TextBlock>

                    </StackPanel>

                    <Label
                        Margin="10"
                        Foreground="{ui:ThemeResource TextFillColorDisabledBrush}"
                        HorizontalAlignment="Right"
                        ToolTip="{Binding FileVersion}"
                        Content="{Binding Version}" />
                </Grid>
            </ui:CardExpander.Header>

            <StackPanel
                Orientation="Vertical">
                <Label
                    Margin="5,0,0,10"
                    Content="我是Qusay，目前是一名初中生，正在编写此应用程序。QQ:2976779544" />

                <StackPanel
                    Orientation="Horizontal">

                    <ui:HyperlinkButton
                        Icon="{ui:SymbolIcon Link48}"
                        Content="查看作者BiliBili首页"
                        Padding="8"
                        NavigateUri="https://space.bilibili.com/1582404131"
                        Margin="0,0,10,0" />

                    <ui:HyperlinkButton
                        Icon="{ui:SymbolIcon Link48}"
                        Content="查看Github项目"
                        Padding="8"
                        NavigateUri="https://cat2.chmlfrp.com"
                        ToolTip="Github可能访问不上(⊙﹏⊙)" />
                </StackPanel>
            </StackPanel>
        </ui:CardExpander>
    </StackPanel>
</Page>