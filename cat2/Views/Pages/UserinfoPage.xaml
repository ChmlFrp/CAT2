<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:CAT2.ViewModels"

    x:Class="CAT2.Views.Pages.UserinfoPage">

    <Page.DataContext>
        <vm:UserinfoPageViewModel />
    </Page.DataContext>

    <Grid
        HorizontalAlignment="Right">
        <ui:Card
            Padding="20">
            <ui:Image
                Height="150"
                Width="150"
                VerticalAlignment="Top"
                Source="{Binding CurrentImage}"
                CornerRadius="50">
                <ui:Image.ContextMenu>
                    <ContextMenu>
                        <ui:MenuItem
                            IsEnabled="{Binding IsEnabled}"
                            Icon="{ui:SymbolIcon ArrowClockwise24}"
                            Command="{Binding LoadingCommand}"
                            Header="刷新信息" />

                        <ui:MenuItem
                            Icon="{ui:SymbolIcon SignOut24}"
                            Command="{Binding SignOutCommand}"
                            Header="退出登录" />
                    </ContextMenu>
                </ui:Image.ContextMenu>
            </ui:Image>
            <ui:Card.Footer>
                <StackPanel
                    Orientation="Vertical">
                    <ui:TextBlock
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10"
                        Text="{Binding Name}"
                        FontSize="18"
                        FontWeight="Bold" />
                    <Label
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15"
                        Content="{Binding Email}"
                        Foreground="{ui:ThemeResource TextFillColorDisabledBrush}" />
                    <ui:TextBlock
                        Margin="10,0,0,0">
                        <Run
                            Text="{Binding Integral}" />
                        <LineBreak />
                        <Run
                            Text="{Binding TunnelCount}" />
                        <LineBreak />
                        <Run
                            Text="{Binding Group}" />
                        <LineBreak />
                        <Run
                            Text="{Binding Qq}" />
                        <LineBreak />
                        <Run
                            Text="{Binding Term}" />
                        <LineBreak />
                        <Run
                            Text="{Binding Bandwidth}" />
                    </ui:TextBlock>
                </StackPanel>
            </ui:Card.Footer>
        </ui:Card>
    </Grid>
</Page>