<Page x:Class="CAT2.Views.Pages.UserinfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="Text" Value="擎天柱" />
        </Style>
    </Page.Resources>

    <Grid>
        <ui:ProgressRing x:Name="LoadingRing" IsIndeterminate="True" Visibility="Collapsed" />

        <ui:Card x:Name="TunnelCard" Margin="0,25,35,25" HorizontalAlignment="Right"
                 VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <ui:Image x:Name="Image" CornerRadius="100" Width="150" Height="150" Margin="0,0,0,10" />
                <TextBlock x:Name="NameBlock" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
                <TextBlock x:Name="EmailBlock" Text="擎天柱@赛博坦" HorizontalAlignment="Center" Foreground="Gray"
                           Margin="0,0,0,10" />
                <TextBlock x:Name="IntegralBlock" />
                <TextBlock x:Name="TunnelBlock" />
                <TextBlock x:Name="GroupBlock" />
                <TextBlock x:Name="RegtimeBlock" />
                <TextBlock x:Name="BandwidthBlock" />
                <ui:Button HorizontalAlignment="Center"
                           Margin="0,10,0,0"
                           Content="右键退出登录"
                           Icon="{ui:SymbolIcon SignOut24}">
                    <ui:Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem ToolTip="还在犹豫什么？快来退出登录吧！" Click="OnSignOut" Header="确定要退出登录吗?" />
                        </ContextMenu>
                    </ui:Button.ContextMenu>
                </ui:Button>
            </StackPanel>
        </ui:Card>
    </Grid>
</Page>